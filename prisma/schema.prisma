generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Authentication models for NextAuth
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Core application models

// Repertoire status enum
enum RepertoireStatus {
  LEARNING   // Currently practicing, not performance-ready
  READY      // Confident and performance-ready
  FEATURED   // Go-to songs, highest confidence
  ARCHIVED   // Previously performed but not actively maintained
}

model Artist {
  id          String   @id // Slug format: artist-name
  name        String   @unique
  genre       String?
  era         String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  songs Song[]

  @@index([name])
}

model Song {
  id          String   @id // Slug format: artist-name-song-title
  title       String
  artistId    String
  originalKey String?
  tempo       Int?
  duration    Int? // Duration in seconds
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  artist          Artist              @relation(fields: [artistId], references: [id], onDelete: Cascade)
  repertoireEntry RepertoireEntry?
  tags            SongTag[]
  performances    PerformanceSong[]
  lyric           Lyric?

  @@index([title])
  @@index([artistId])
}

model RepertoireEntry {
  id              String           @id @default(cuid())
  songId          String           @unique // One-to-one: a song can have at most one active repertoire entry
  status          RepertoireStatus @default(LEARNING)

  // Performance metadata (YOUR version of the song)
  performedKey    String? // Key you actually perform it in (if different from original)
  performedTempo  Int? // Tempo you perform at (if different from original)
  capoPosition    Int? // Guitar capo position

  // Tracking
  addedAt         DateTime @default(now())
  lastPracticed   DateTime?
  lastPerformed   DateTime?
  practiceCount   Int      @default(0)
  performanceCount Int     @default(0)

  // Notes and customization
  notes       String? // "Capo 3, drop D tuning, fingerpicking intro"
  arrangement String? // "Verse-Chorus-Bridge-Chorus x2"

  // Setlist planning helpers
  difficulty         Int?     @default(3) // 1-5 scale
  vocallyDemanding   Boolean  @default(false) // Helps balance setlist
  energyLevel        Int?     @default(3) // 1-5: ballad to uptempo
  typicalDuration    Int? // Your typical performance time in seconds (may differ from recording)
  worksWellFor       String? // "weddings, corporate, jazz clubs"
  avoidAfter         String? // "Don't follow with another ballad"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([lastPerformed])
  @@index([lastPracticed])
}

model Tag {
  id       String  @id // Slug format: tag-name
  name     String  @unique
  category String  @default("general") // genre, holiday, mood, tempo, era, etc.
  color    String? // Hex color for UI display

  songs SongTag[]

  @@index([category])
}

model SongTag {
  songId String
  tagId  String

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([songId, tagId])
}

model Performance {
  id                String   @id @default(cuid())
  venue             String
  date              DateTime
  description       String?
  notes             String?
  type              String? // "wedding", "corporate", "club gig", "private party"
  expectedDuration  Int? // Expected duration in minutes
  completed         Boolean  @default(false) // Mark as completed after the gig
  setlistNotes      String? // "Flow was great, crowd loved song 3"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  songs PerformanceSong[]

  @@index([date])
  @@index([completed])
}

model PerformanceSong {
  performanceId String
  songId        String
  order         Int // Position in setlist

  performance Performance @relation(fields: [performanceId], references: [id], onDelete: Cascade)
  song        Song        @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@id([performanceId, songId])
  @@index([order])
}

// Lyrics models for displaying timed lyrics
model Lyric {
  id         String   @id @default(cuid())
  songId     String   @unique
  hasTiming  Boolean  @default(false) // Whether timing data is available
  source     String?  // "manual", "musixmatch", "imported", etc.
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  song  Song         @relation(fields: [songId], references: [id], onDelete: Cascade)
  lines LyricLine[]

  @@index([songId])
}

model LyricLine {
  id         String  @id @default(cuid())
  lyricId    String
  time       Float?  // Seconds from start (null if hasTiming is false)
  text       String
  order      Int     // Line number for display order
  breakAfter Boolean @default(false) // Add spacing after this line (for untimed lyrics)

  lyric Lyric @relation(fields: [lyricId], references: [id], onDelete: Cascade)

  @@index([lyricId, order])
}
